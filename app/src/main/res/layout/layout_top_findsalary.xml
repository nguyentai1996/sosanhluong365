<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgTop"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgtop"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <AutoCompleteTextView
            android:id="@+id/edNameJobSearchSalary"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/imagetop"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/boder"
            android:drawableLeft="@drawable/ic_search"
            android:drawableRight="@drawable/ic_action_name"
            android:drawablePadding="15dp"
            android:hint="Công việc bạn muốn lựa chọn"
            android:maxLines="1"
            android:textSize="12dp">

        </AutoCompleteTextView>


        <Spinner
            android:id="@+id/edCareerSearchSalary"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/imagetop"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/boder"
            android:drawableLeft="@drawable/nganhnghe"
            android:drawableRight="@drawable/spinner"
            android:drawablePadding="15dp"
            android:hint="Ngành nghề"
            android:maxLines="1"
            android:textSize="12dp">

        </Spinner>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/tvThunhap"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="6">


        <Button
            android:id="@+id/edFindSalary"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="5.2"
            android:background="@drawable/styleedittext"
            android:inputType="number"
            android:text="Tra cứu lương"
            android:textColor="#FFFFFF"
            android:textSize="19dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.7"
            android:background="@drawable/styleedittext"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgMore"
                android:layout_width="22dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/union" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>