<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        <LinearLayout
            android:background="@color/bgsametableText"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:gravity="center_vertical"
                android:background="@drawable/bgtop">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/imgTop"
                    android:layout_width="113.37dp"
                    android:layout_height="60dp"
                    android:src="@drawable/bgsplassh">

                </ImageView>
            </LinearLayout>

            <TextView
                android:layout_marginLeft="18dp"
                android:text="Tin tức"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvTintuc"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="10.7dp">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lnShare"
                android:layout_marginTop="24.2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/share">

                </ImageView>

                <TextView
                    android:layout_marginLeft="13dp"
                    android:text="Giới thiệu app so ánh lương cho bạn bè"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>


                <View
                    android:layout_marginTop="10.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/yellow"></View>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="14.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/huongdan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </ImageView>

                    <TextView
                        android:layout_marginLeft="13dp"
                        android:text="Hướng dẫn sử dụng app"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>


                <View
                    android:layout_marginTop="10.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/yellow"></View>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnAboutMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="14.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/chungtoi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </ImageView>

                    <TextView
                        android:layout_marginLeft="13dp"
                        android:text="Về chúng tôi"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>


                <View
                    android:layout_marginTop="10.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/yellow"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="14.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/apptimviec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </ImageView>

                    <TextView
                        android:layout_marginLeft="13dp"
                        android:text="Ứng dụng Timviec365.com"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>


                <View
                    android:layout_marginTop="10.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/yellow"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="14.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/hotro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </ImageView>

                    <TextView
                        android:layout_marginLeft="13dp"
                        android:text="Hỗ trợ trục tuyến"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</FrameLayout>